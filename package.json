{
  "name": "fmcityfest-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "APP_ENV=development npx expo run:android",
    "ios": "APP_ENV=development npx expo run:ios",
    "web": "expo start --web",
    "run:android": "APP_ENV=development npx expo run:android",
    "run:ios": "APP_ENV=development npx expo run:ios",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "build:aab": "APP_ENV=production NODE_ENV=production npx expo prebuild --platform android && cd android && APP_ENV=production NODE_ENV=production ./gradlew bundleRelease",
    "build:ios:prod": "APP_ENV=production NODE_ENV=production npx expo prebuild --platform ios",
    "build:aab:clean": "APP_ENV=production NODE_ENV=production npx expo prebuild --clean --platform android && cd android && APP_ENV=production NODE_ENV=production ./gradlew bundleRelease",
    "build:ios:prod:clean": "APP_ENV=production NODE_ENV=production npx expo prebuild --clean --platform ios",
    "firebase:dev": "node scripts/copy-firebase-config.js dev",
    "firebase:prod": "node scripts/copy-firebase-config.js prod",
    "postinstall": "patch-package",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "@expo-google-fonts/raleway": "^0.4.2",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-firebase/app": "^20.0.0",
    "@react-native-firebase/crashlytics": "^20.0.0",
    "@react-native-firebase/messaging": "^20.0.0",
    "@react-native-firebase/remote-config": "^20.0.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "dayjs": "^1.11.19",
    "expo": "^53.0.25",
    "expo-build-properties": "~0.14.8",
    "expo-constants": "~17.1.8",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-linking": "~7.1.7",
    "expo-navigation-bar": "~4.2.8",
    "expo-notifications": "~0.31.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "promise": "^8.3.0",
    "react": "19.0.0",
    "react-native": "0.79.6",
    "react-native-image-pan-zoom": "^2.1.12",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "babel-plugin-module-resolver": "^5.0.0",
    "detox": "^20.14.5",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~9.2.0",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.13",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
